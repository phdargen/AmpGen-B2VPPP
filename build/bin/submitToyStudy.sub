executable  = doToyFit.sh
universe    = vanilla
#getenv 	    = True
#requirements = (OpSysAndVer =?= "CentOS7")
requirements = ( (OpSysAndVer =?= "CentOS7") && (Machine =!= LastRemoteHost) )
#requirements = ( (TARGET.has_avx2) && (OpSysAndVer == "CentOS7") && (Machine =!= LastRemoteHost) )
#on_exit_remove          = (ExitBySignal == False) && (ExitCode == 0)
max_retries             = 5

if defined i
	INDIR = $(i)
else 
	INDIR = .
endif

if defined o
	OPTIONFILE = $(o)
else
	OPTIONFILE = test.txt
endif

if defined d
	OUTDIR = $(d)
else 
	OUTDIR = sys_toys
endif

if defined n
	NJOBS = $(n)
else 
	NJOBS = 2
endif

#espresso     = 20 minutes
#microcentury = 1 hour
#longlunch    = 2 hours
#workday      = 8 hours
#tomorrow     = 1 day

+JobFlavour = "microcentury"
#+MaxDuration = 300
#request_memory = 8096
request_cpus   = 2
#RequestCpus = 8
request_disk   = 800000

#WHEN_TO_TRANSFER_OUTPUT = ON_EXIT
