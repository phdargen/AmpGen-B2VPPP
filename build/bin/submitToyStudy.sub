transfer_input_files = myFitter.exe, myPlotter.exe, myToyGen.exe, main_psi.txt, toy_gen.txt, toy_fit.txt, $(INDIR)/$(OPTIONFILE), SignalIntegrationEvents_Acc.root, toy_coreStart.root, mass_width.csv, MintDalitzSpecialParticles.csv
arguments = $(Process) main_psi.txt toy_gen.txt toy_fit.txt $(OPTIONFILE)
 
#input      = $(OPTIONFILE)
output      = $(OUTDIR)/out_$(Process).out
#error       = $(OUTDIR)/error_$(Process).err
#log         = $(OUTDIR)/log_$(Process).log
error       = $(OUTDIR)/error.err
log         = $(OUTDIR)/log.log

transfer_output_files = result.root, model.txt, log.txt
transfer_output_remaps = "result.root = $(OUTDIR)/result_$(Process).root ; model.txt = $(OUTDIR)/model_$(Process).txt ; log.txt = $(OUTDIR)/log_$(Process).txt"

