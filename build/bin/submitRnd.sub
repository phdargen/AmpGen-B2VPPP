executable  = doFit.sh
universe    = vanilla
#getenv 	    = True
#requirements = (OpSysAndVer =?= "CentOS7")
requirements = ( (OpSysAndVer =?= "CentOS7") && (Machine =!= LastRemoteHost) )
#requirements = ( (TARGET.has_avx2) && (OpSysAndVer == "CentOS7") && (Machine =!= LastRemoteHost) )
#on_exit_remove          = (ExitBySignal == False) && (ExitCode == 0)
max_retries             = 5

if defined i
	INDIR = $(i)
else 
	INDIR = .
endif

if defined o
	OPTIONFILE = $(o)
else
	OPTIONFILE = test.txt
endif

if defined d
	OUTDIR = $(d)
else 
	OUTDIR = rnd
endif

if defined n
	NJOBS = $(n)
else 
	NJOBS = 2
endif


#espresso     = 20 minutes
#microcentury = 1 hour
#longlunch    = 2 hours
#workday      = 8 hours
#tomorrow     = 1 day

+JobFlavour = "longlunch"
#+MaxDuration = 300
#request_memory = 8096
request_cpus   = 2
#RequestCpus = 8
request_disk   = 800000


transfer_input_files = myFitter.exe, myPlotter.exe, main_psi.txt, $(INDIR)/$(OPTIONFILE), b2psiKpipi_sw.root, SignalIntegrationEvents_Acc.root, mass_width.csv, MintDalitzSpecialParticles.csv
arguments = $(Process) main_psi.txt $(OPTIONFILE)
 
output      = $(OUTDIR)/out_$(Process).out
error       = $(OUTDIR)/error.err
log         = $(OUTDIR)/log.log

transfer_output_files = result.root, model.txt, log.txt, amp_plots.pdf, amp_plots2.pdf, amp_plots3.pdf
transfer_output_remaps = "result.root = $(OUTDIR)/result_$(Process).root ; amp_plots.pdf = $(OUTDIR)/amp_plots_$(Process).pdf; amp_plots2.pdf = $(OUTDIR)/amp_plots2_$(Process).pdf; amp_plots3.pdf = $(OUTDIR)/amp_plots3_$(Process).pdf ; model.txt =  $(OUTDIR)/model_$(Process).txt; log.txt = $(OUTDIR)/log_$(Process).txt"

queue $(NJOBS)
